    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navButtons = document.querySelectorAll('.nav-item');
            const contentSections = document.querySelectorAll('.content-section');

            function switchSection(targetId) {
                contentSections.forEach(section => section.classList.remove('active'));
                navButtons.forEach(button => button.classList.remove('active'));

                document.getElementById(targetId)?.classList.add('active');
                document.querySelector(`.nav-item[data-target="${targetId}"]`)?.classList.add('active');
            }

            navButtons.forEach(button => {
                button.addEventListener('click', () => switchSection(button.dataset.target));
            });

            // Section 2: Principles Data & Injection
            const principlesData = [
                { title: 'الشفافية', content: 'تقديم معلومات واضحة وصادقة وكاملة لأصحاب المصلحة، وتجنب إخفاء الحقائق.' },
                { title: 'المساءلة', content: 'تحمل الأفراد والمؤسسات المسؤولية عن قراراتهم وأفعالهم، وتقديم تفسيرات وتبريرات لها.' },
                { title: 'الإنصاف', content: 'معاملة جميع أصحاب المصلحة بعدل ومساواة، وحماية حقوق الأقليات.' },
                { title: 'الاستجابة', content: 'قدرة المؤسسة على الاستجابة بسرعة وفعالية لاحتياجات ومخاوف أصحاب المصلحة.' },
                { title: 'الفعالية والكفاءة', content: 'تحقيق أهداف المؤسسة بأقل قدر من الموارد الممكنة، وضمان الاستخدام الأمثل للموارد.' },
                { title: 'المشاركة', content: 'إشراك أصحاب المصلحة المعنيين في عمليات اتخاذ القرار حيثما كان ذلك مناسبًا.' },
            ];
            const principlesGrid = document.getElementById('principles-grid');
            principlesGrid.innerHTML = principlesData.map(p => `
                <div class="interactive-card bg-white p-6 rounded-lg cursor-pointer shadow-sm">
                    <h4 class="font-bold text-xl text-gray-800">${p.title}</h4>
                    <p class="text-gray-600 mt-2">${p.content}</p>
                </div>
            `).join('');

