                    title: 'الحوكمة الرشيدة (القطاع العام)',
                    content: 'تتعلق بإدارة الشؤون العامة بأسلوب شفاف ومسؤول وفعال يراعي مصالح المواطنين. تشمل مبادئ مثل سيادة القانون، والمساواة، والمساءلة.',
                    img: 'https://images.pexels.com/photos/269077/pexels-photo-269077.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'
                }
            };
            const typesTabContent = document.getElementById('types-tab-content');
            const typeTabButtons = document.querySelectorAll('#types .tab-button');
            
            function renderTypeContent(typeKey) {
                 const type = typesData[typeKey];
                 typesTabContent.innerHTML = `
                    <div class="grid md:grid-cols-2 gap-8 items-center fadeIn">
                        <div>
                             <img src="${type.img}" alt="${type.title}" class="rounded-lg shadow-md w-full h-auto object-cover" onerror="this.onerror=null;this.src='https://placehold.co/500x350/eeeeee/aaaaaa?text=Image+Not+Found';">
                        </div>
                        <div class="prose max-w-none">
                            <h3 class="text-2xl font-bold section-title">${type.title}</h3>
                            <p>${type.content}</p>
                        </div>
                    </div>`;
            }

            typeTabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    typeTabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    renderTypeContent(button.dataset.tab);
                });
            });
            renderTypeContent('corporate'); // Initial render


            // Section 4: Benefits Chart
            const benefitsCtx = document.getElementById('benefitsChart').getContext('2d');
            new Chart(benefitsCtx, {
                type: 'bar',
                data: {
                    labels: ['تعزيز الثقة', 'تحسين الأداء', 'إدارة المخاطر', 'الامتثال', 'الاستدامة'],
                    datasets: [{
                        label: 'متوسط الأثر المتوقع',
                        data: [90, 85, 88, 92, 87],
                        backgroundColor: 'rgba(0, 77, 64, 0.7)',
                        borderColor: 'rgba(0, 77, 64, 1)',
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, max: 100 } },
                    plugins: { legend: { display: false }, tooltip: { displayColors: false } }
                }
            });
            
            // Section 5: Frameworks Data & Injection
            const frameworksData = [
                { title: 'COBIT', content: 'إطار عمل للحوكمة والإدارة الشاملة لتقنية المعلومات في المؤسسة، يركز على خلق القيمة من تقنية المعلومات وإدارة المخاطر.' },
                { title: 'ITIL', content: 'مجموعة من الممارسات التفصيلية لإدارة خدمات تقنية المعلومات (ITSM)، وتركز على محاذاة خدمات تقنية المعلومات مع احتياجات العمل.' },
                { title: 'ISO/IEC 27000', content: 'عائلة من المعايير الدولية لأمن المعلومات، وأشهرها ISO 27001 التي تحدد متطلبات نظام إدارة أمن المعلومات (ISMS).' },
                { title: 'NIST Framework', content: 'إطار عمل طوعي قائم على المعايير، والإرشادات، والممارسات الفرعية لإدارة وتقليل مخاطر الأمن السيبراني.' },
                { title: 'COSO', content: 'إطار عمل للحوكمة الداخلية للمؤسسة، يركز على التحكم الداخلي، وإدارة المخاطر، واكتشاف الاحتيال.' },
            ];
            const accordionContainer = document.getElementById('accordion-container');
            accordionContainer.innerHTML = frameworksData.map(item => `
                <div class="border rounded-lg overflow-hidden shadow-sm">
                    <button class="accordion-button w-full flex justify-between items-center p-4 text-right font-bold bg-gray-50 hover:bg-gray-100 transition-colors">
                        <span>${item.title}</span>
                        <svg class="w-5 h-5 shrink-0 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div class="p-5 bg-white hidden prose max-w-none">
                        <p>${item.content}</p>
                    </div>
                </div>
            `).join('');
            
            accordionContainer.querySelectorAll('.accordion-button').forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling;
                    const icon = button.querySelector('svg');
                    const isOpen = !content.classList.contains('hidden');
                    
                    content.classList.toggle('hidden');
                    button.classList.toggle('open');
                    icon.classList.toggle('rotate-180', !isOpen);
                });
            });
            
            switchSection('intro'); // Initial Section
        });
    </script>
</body>
</html>
